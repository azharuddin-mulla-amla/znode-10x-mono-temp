{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@znode/base-components": ["packages/base-components/src/index.ts"],
      "@znode/base-components/server": [
        "packages/base-components/src/server.ts"
      ],
      "@znode/page-builder": ["packages/page-builder/src/index.ts"],
      "@znode/page-builder/server": ["packages/page-builder/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
