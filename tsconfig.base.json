{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@znode/agents": ["packages/agents/src/index.ts"],
      "@znode/agents/server": ["packages/agents/src/server.ts"],
      "@znode/base-components": ["packages/base-components/src/index.ts"],
      "@znode/base-components/server": [
        "packages/base-components/src/server.ts"
      ],
      "@znode/clients": ["packages/clients/src/index.ts"],
      "@znode/clients/server": ["packages/clients/src/server.ts"],
      "@znode/data-providers": ["packages/data-providers/src/index.ts"],
      "@znode/data-providers/server": ["packages/data-providers/src/server.ts"],
      "@znode/page-builder": ["packages/page-builder/src/index.ts"],
      "@znode/page-builder/server": ["packages/page-builder/src/server.ts"],
      "@znode/page-builder/types": [
        "packages/page-builder/src/types/exports/exports.types.ts"
      ],
      "@znode/utils": ["packages/utils/src/index.ts"],
      "@znode/utils/server": ["packages/utils/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
